# Auto detect text files and perform LF normalization
* text=auto

# Python
*.py text eol=lf
*.pyi text eol=lf

# Shell scripts
*.sh text eol=lf

# Docker
Dockerfile text eol=lf
*.dockerignore text eol=lf

# Documentation
*.md text eol=lf
*.txt text eol=lf

# YAML
*.yml text eol=lf
*.yaml text eol=lf

# JSON
*.json text eol=lf

# Images (treat as binary)
*.png binary
*.jpg binary
*.jpeg binary
*.webp binary

# Model files (treat as binary)
*.bin binary
*.safetensors binary
*.ckpt binary
*.pth binary
